{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "extends": ["plugin:react/recommended", "google", "prettier", "prettier/react"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "valid-jsdoc": "off",
        "require-jsdoc": "off",
        "object-curly-spacing": "off",
        "arrow-parens": "off",
        "linebreak-style": "off",
        "comma-dangle": "off",
        "operator-linebreak": "off",
        "spaced-comment": "off",
        "space-before-function-paren": "off",
        "no-invalid-this": "off",
        "max-len": ["warn", { "code": 120 }],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "no-loop-func": ["warn"],
        "comma-style": ["warn", "last"],
        "space-before-blocks": ["warn", "always"],
        "no-mixed-spaces-and-tabs": ["warn"],
        "no-unused-vars": ["warn"],
        "no-extra-semi": ["warn"],
        "no-console": ["warn"],
        "one-var": "off",
        "no-debugger": "warn",
        "indent": ["warn", 4, { "SwitchCase": 1, "VariableDeclarator": 1 }]
    }
}
